<!DOCTYPE html>
<html>

<head>
    <title>League of Legends Team Composition Home</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script type="text/javascript" src="js/angular.js"></script>
    <script type="text/javascript" src="js/app.js"></script>
    <script type="text/javascript" src="js/champions.js"></script>
    <!-- <link rel="stylesheet" type="text/css" href="/css/main.css" /> -->
</head>

<body ng-app="myApp">
    <div class="title_containter">
        <img class="title" src="/img/league.png" />
    </div>

    <div class="angularLayout row" ng-controller="BaseController as base">

        <h1>All Champions</h1>
        <p align = "right" font-size = "12"><a href="/home">Home </a>| <a href="/show">Show</a></p>
        <div class = "row">
        <div class="search col-sm-6">
            <label>Search by Name:
                <input ng-model="searchChampion">
            </label>
        </div>
        <div class="order col-sm-6">
            <label>Order By: </label>
            <select ng-model="sortBy">
                <option class= "name" value="-name">Name</option>
                <option class = "attack" value="-info.attack">Attack</option>
                <option class="defense" value="-info.defense">Defense</option>
                <option class="magic" value="-info.magic">Magic</option>
                <option class="difficulty"value="-info.difficulty">Difficulty</option>
            </select>
        </div>
      </div>
        <div  ng-controller="ChampionsController as championCtrl">
            <div class="champion col-sm-3" ng-repeat="champion in championCtrl.champions | filter:searchChampion | orderBy:sortBy">
                <h3>{{ champion.name }}</h3>
                <p><span ng-repeat="tag in champion.tags">
                    {{tag}}
                    {{$last ? '' : ($index==champion.tags.length-2) ? ', ' : ', '}}
                </span></p>
                <img ng-src=" {{ champion.image }}" class="img-circle" />
                <p class="attack">Attack: {{ champion.info.attack }} </p>
                <p class="defense">Defense: {{ champion.info.defense }} </p>
                <p class="magic">Magic: {{ champion.info.magic }} </p>
                <p class="difficulty">Difficulty: {{ champion.info.difficulty }} </p>
            </div>
        </div>
    </div>
</body>

</html>
